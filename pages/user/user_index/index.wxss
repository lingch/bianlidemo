.Member_menoy {
    position: absolute;
    bottom: 10px;
    left: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    height: 30px;
    line-height: 30px;
    background: #fff;
    padding: 0 20px;
    -webkit-border-radius: 5px;
    border-radius: 5px;
    color: #09bb07;
}

.Member_head .vip {
    position: absolute;
    top: 50%;
    left: 50%;
    margin: -10px 0 0 20px;
}

.vip_ico {
    display: -webkit-box;
    -webkit-box-align: center;
    margin-right: 40rpx;
}

.vip_ico image {
    width: 24px;
    height: 24px;
    color: #fff;
    background: #fff;
    border-radius: 50%;
}

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    box-shadow: 0 0 0 6rpx rgba(255,255,255,0.5);
}
.userinfo_name-box{margin-top: 30rpx;font-size: 36rpx;}
.userinfo_name {max-width: 360rpx;display: inline-block;vertical-align: bottom;}
.tongbu-btn{display: inline-block;vertical-align: bottom;margin-left: 20rpx;font-size: 1.1em;}
.member_info view {
    background: #fff;
    margin-top: 10px;
    padding: 15px 10px;
    font-size: 14px;
}

/*my.wxss*/
.my-menu{box-shadow: 0 -8rpx 24rpx 0 rgba(72, 60, 38, 0.16);position: relative;padding:16px;border-radius:30px;margin:20px;background: #fff;margin-top:20%;

}

.my-menu-box {
    background: #fff;
    margin-bottom: 20rpx;
}

.my-menu-item {
    padding: 26rpx 30rpx;
    font-weight: bold;
    color: #505050;
}

.my-menu-item .iconfont {
    font-weight: normal;
    display: inline-block;
    -webkit-transform: scale(1.2);
    transform: scale(1.2);
}

.arrowL {
    display: block;
    padding-left: 30px;
}

.arrowRv::before {
    -webkit-transform: translateY(-50%) scale(0.7) rotate(135deg);
    transform: translateY(-50%) scale(0.7) rotate(135deg);
}

.forum-box {
    overflow: hidden;
}

.my-menu-subitem {
    padding: 12px 20px 12px 10px;
    color: #666;
}

.my-menu-subitem:nth-child(n+2)::before {
    left: 40rpx;
}

.my-menu-subitem:active {
    background: rgba(0, 0, 0, 0.05);
}
.menu-line {
    text-align: center;
    display: flex;display: -webkit-flex;line-height: 1.1;
}

.menu-line .my-menu-subitem {
    flex: 1;
    padding: 30rpx 0;
    font-size: 26rpx;
}
.menu-line .my-menu-img{width: 40rpx;height: 40rpx;margin-bottom: 30rpx;}
.menu-line .iconfont{font-size: 50rpx;margin-bottom: 20rpx;display: inline-block;}

.copyright {
    text-align: center;
    line-height: 40px;
    height: 40px;
    margin-bottom: 10px;
}
.copyright-text {
    width: 100%;
    font-size: 28rpx;
    color:#000;

}
.copyright-text::after{ display: inline-block; border:5px solid; border-color: transparent transparent transparent #ccc; content: ""; margin-left: 10rpx;}




.links .my-menu-item:active {
    background: rgba(0, 0, 0, 0.05);
}

.loading-icon {
    width: 72px;
    height: 72px;
}

.loading-icon+text {
    display: block;
}

.callPhone {
    font-size: 12px;
    color: green;
	line-height: 16px;
}
