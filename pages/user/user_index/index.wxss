page {
    font-size: 32rpx;background:url(http://dow.supernice.cn/bia22nlib33jqq.JPG);
    width:100%;
height:100%;
background-size:100% 100%;
position:absolute;

}
.fb{font-weight: bold;}
.user_content{padding:0 30rpx;color: #fff;position: relative;overflow: hidden;}
.user-elem{width: 70rpx;height: 70rpx;position: absolute;}
.user-elem:first-child{right:-30rpx;top: 10%;}
.user-elem:nth-child(n+2){left:-30rpx;bottom: 40%;transform: scale(0.8);}
.Member_head {padding: 50rpx 30rpx 60rpx;text-align: center;}
.vip-box{padding: 20rpx 30rpx;background: #cab183;color: #634f2b;border-radius: 12rpx 12rpx 0 0;background-image: linear-gradient(90deg,#c8ae7f,#dbc7a3);position: relative;box-shadow: 0 -5rpx 35rpx 0 #242628;}
.vip-elementbg{position: absolute;top: 0;right: 0;width:270rpx;height: 100%;background: conic-gradient(from 140deg, #d5be96, #d7c29f);border-top-right-radius:12rpx;}
.vip-cont{position: relative;}
.open-member{display: flex;align-items: center;justify-content: space-between;}
.open-member-txt,.vip-balance{font-weight: bold;}
.open-member-txt .iconfont{font-size: 36rpx;margin-right: 10rpx;}
.open-member-btn{background: transparent;color: inherit;font-size: 28rpx;border: 1px solid;line-height: 56rpx;padding: 0 20rpx;border-radius: 6rpx;}
.open-member-btn::after{border: none;}

/* 开通会员弹框 */
.open-member-pop{z-index: 2;}
.pop-cont{width: 600rpx;padding:60rpx;background: #fff;border-radius: 10rpx;z-index: 1;}
.recharge-colse{position: absolute;right: 0;top: 0;background: #c9b084;width: 78rpx;height: 78rpx;border-bottom-left-radius: 80%;}
.recharge-colse::before,.recharge-colse::after{content:'';display: block;width: 50%;height: 1px;background: #fff;position: absolute;right: 20%;top: 45%;transform: rotate(45deg);}
.recharge-colse::after{transform: rotate(-45deg);}
.recharge-colse:activeP{opacity: 0.8;}
.pop-tel-inp{margin-top: 60rpx;}
.pop-tel-inp,.pop-tel-check{height: 72rpx;padding: 0 30rpx;border: 1px solid #c8ae7f;border-radius: 6rpx;}
.get-code{display: inline-block;background: #c8ae7f;color:#fff;font-size: 28rpx;border-radius: 6rpx;}
.get-code:active,.pop-sure-btn:active{opacity: 0.8;}
.get-code::after{border: none;}

.pop-sure-btn{background: #c8ae7f;color:#fff;font-size: 32rpx;border-radius: 6rpx;margin-top: 50rpx;}
.pop-sure-btn::after{border: none;}
.get-weixintel{color: #c8ae7f;background: transparent;font-size: 36rpx;margin-top: 20rpx;}
.get-weixintel::after{border-color: currentColor;}

